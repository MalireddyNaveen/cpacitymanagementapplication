<mvc:View
    controllerName="com.app.capacitymanagement.controller.manualsimulation"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="mainPage"
        enableScrolling="false"
    >
        <headerContent>
            <Button
                id="idBackBtn_MannualSimulationPage"
                icon="sap-icon://nav-back"
                type="Transparent"
                press="onPressNavBacktoMainPage_MannualSimulationPage"
            />
            <Image
                id="idLogoImage_MannualSimulationPage"
                class="sapUiTinyMarginBegin"
                height="1.5rem"
                src="https://www.daikin.com/-/media/Project/Daikin/daikin_com/dg_common/images/logo_daikin-png.png"
                alt="Logo"
            />
            <ToolbarSpacer id="idToolBarSpacerEmpty_MannualSimulationPage" />
            <Text
                id="idText_CM_MannualSimulationPage"
                text="Capacity Management"
                class="capacityManagementTitle"
            />
            <ToolbarSpacer id="idToolabarSpacer_MannualSimulationPage" />
            <Avatar
                id="idAvatar_MannualSimulationPage"
                displaySize="XS"
                press="onAvatarPress_CM_MannualSimulationPage"
            />
        </headerContent>
        <content>
            <FlexBox
                id="mainFlexBox"
                direction="Column"
                fitContainer="true"
                width="100%"
                height="100%"
            >
                <!-- Three.js Full-Screen Canvas -->
                <HBox id="idHBox_ManualSimulationPage">
                    <VBox
                        id="overlayContainer"
                        class="overlay"
                        width="20%"
                    >
                        <ComboBox
                            id="id_combobox_for_truckTypeMS"
                            items="{path: '/TruckTypes'}"
                            change="onTruckTypeChangeMS"
                            class="bg-transparent!"
                            placeholder="Select a Container..."
                        >
                            <core:ListItem
                                id="idCoreListItemTruckType_ManualSimulationPage"
                                key="{truckType}"
                                text="{truckType}"
                            />
                        </ComboBox>

                        <Table
                            id="idProductTableinMS"
                            mode="SingleSelectMaster"
                            width="110%"
                            items="{path: '/SelectedProduct', parameters:{expand:'Productno'}}"
                            sticky="ColumnHeaders"
                            class="tableSection_ManualPageTable"
                        >
                            <columns>
                                <Column
                                    id="idColumnProduct_Model_ManualSimulationPage"
                                    class="bg-transparent!"
                                >
                                    <Text
                                        id="idTextProduct_Model_ManualSimulationPage"
                                        text="Product/Model"
                                    />
                                </Column>
                                <Column
                                    id="idColumnQuantity_ManualSimulationPage"
                                    class="bg-transparent!"
                                >
                                    <Text
                                        id="idTextQuantity_ManualSimulationPage"
                                        text="Quantity"
                                    />
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem
                                    id="idColumnListItems_ManualSimulationPage"
                                    class="bg-transparent!"
                                >
                                    <cells>
                                        <Text
                                            id="idTextValueProductno_ManualSimulationPage"
                                            text="{Productno_model}"
                                        />
                                        <Text
                                            id="idTextValueQuantity_ManualSimulationPage"
                                            text="{SelectedQuantity}"
                                        />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                        <VBox
                            id="idFinishBtn_ManualSimulationPage"
                            alignItems="End"
                            width="110%"
                        >
                            <Button
                                id="idButtonFinishMS"
                                text="Finish"
                                type="Emphasized"
                                press="onFinishSimulation"
                            />
                        </VBox>
                    </VBox>
                    <HBox
                        id="threejsContainer"
                        width="70%"
                        height="100%"
                    >
                        <core:HTML
                            id="threeContainer2"
                            content="&lt;div id=&quot;threejsCanvasNew&quot; style=&quot;width: 5%; height: 2px;&quot;&gt;&lt;/div&gt;"
                            xmlns:core="sap.ui.core"
                        />
                    </HBox>
                    <!-- UI5 Elements Overlaid on Three.js -->
                </HBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>